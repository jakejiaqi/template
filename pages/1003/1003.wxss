/* pages/1003/1003.wxss */
.pgc1003 {
  width: 100%;
}

.title {
  font-size: 1.5rem;
  width: 100%;
  text-align: center;
  margin-top: 75rpx;
  margin-bottom: 25rpx;
  color: #9C89B8;
}

.subTitle {
  font-size: 0.8rem;
  width: 100%;
  text-align: center;
  margin-top: 5rpx;
}

.content {
  margin-top: 50rpx;
  padding: 15rpx 5%;
  background-color: #FFF;
}

picker-view {
  height: 600rpx;
}

picker-view .indicator {
  height: 300rpx;
}

picker-view .text {
  width: 150rpx;
  text-align: center;
  line-height: 600rpx;
}

picker-view .item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

picker-view image {
  width: 250rpx;
  height: 250rpx;
}

picker-view text {
  font-size: 0.8rem;
  line-height: 50rpx;
}

button {
  width: 70%;
  color: #FFF;
  font-size: 0.95rem;
  margin: 60rpx 15% 10rpx;
  background-color: #9C89B8;
}

.tips {
  font-size: 0.7rem;
  width: 100%;
  text-align: center;
}

.tips:last-child {
  margin-bottom: 25rpx;
}