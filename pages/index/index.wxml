<!--index.wxml-->
<view class="index">
	<view class="index-hd">
		<image class="index-logo" src="/images/logo.png"></image>
		<view class="index-desc">个人小程序模板</view>
	</view>
	<view class="index-bd">
		<view class="kind-list">
			<block wx:for-items="{{list}}" wx:key="index">
				<navigator url="/pages/{{item.id}}/{{item.sub}}" class="navigator" hover-class="none">
					<view class="kind-list-item">
						<view id="{{item.id}}" class="kind-list-item-hd">
							<view class="kind-list-text">{{item.name}}</view>
							<image class="kind-list-img" src="/images/{{item.id}}.png"></image>
						</view>
					</view>
				</navigator>
			</block>
		</view>
	</view>
</view>